<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/network_traffic_title">

    <com.android.settingslib.widget.TopIntroPreference
        android:key="network_traffic_intro"
        android:title="@string/network_traffic_intro_text"
        android:selectable="false"
        android:persistent="false" />

    <com.evolution.settings.preference.SystemSettingMainSwitchPreference
        android:key="network_traffic_state"
        android:title="@string/network_traffic_master_switch_title"
        android:defaultValue="false" />

    <PreferenceCategory
        android:title="@string/network_options_title">

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="network_traffic_autohide_threshold"
            android:title="@string/network_traffic_autohide_title"
            android:summary="@string/network_traffic_autohide_summary"
            android:dependency="network_traffic_state"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
