<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/notifications_title">

    <com.evolution.settings.preference.GlobalSettingMasterSwitchPreference 
        android:key="heads_up_notifications_enabled"
        android:fragment="com.evolution.settings.fragments.HeadsUpSettings"
        android:title="@string/heads_up_notifications"
        android:summary="@string/heads_up_notifications_summary"
        android:defaultValue="true" />

    <com.evolution.settings.preference.SystemSettingSwitchPreference
        android:key="notification_headers"
        android:title="@string/notification_headers_title"
        android:summary="@string/notification_headers_summary"
        android:defaultValue="false" />

    <!-- Alert Slider Notifications -->
    <com.evolution.settings.preference.SystemSettingSwitchPreference
        android:key="alert_slider_notifications"
        android:title="@string/alert_slider_notifications_title"
        android:summary="@string/alert_slider_notifications_summary"
        android:defaultValue="true" />

    <PreferenceCategory
        android:title="@string/light_settings_header">

        <Preference
            android:key="notification_light"
            android:fragment="com.android.settings.applications.manageapplications.ManageApplications"
            android:title="@string/notification_light_settings">
            <extra
                android:name="classname"
                android:value="com.android.settings.Settings$NotificationAppListActivity" />
        </Preference>

        <Preference
            android:key="charging_light"
            android:title="@string/battery_light_settings"
            android:summary="@string/battery_light_summary"
            android:fragment="com.evolution.settings.fragments.BatteryLightSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_screen"
        android:title="@string/notification_screen_title">

        <!-- Preview -->
        <com.evolution.settings.preference.AmbientLightSettingsPreview
            android:key="ambient_light_preview"
            android:layout="@layout/ambient_light"
            android:selectable="false"/>

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="pulse_ambient_light"
            android:title="@string/pulse_ambient_light_title"
            android:summary="@string/pulse_ambient_light_summary"
            android:defaultValue="false" />

        <com.evolution.settings.preference.SystemSettingSeekBarPreference
            android:key="pulse_ambient_light_duration"
            android:title="@string/pulse_ambient_light_duration_title"
            android:summary="@string/pulse_ambient_light_duration_summary"
            android:persistent="false"
            android:defaultValue="2"
            android:max="10"
            settings:min="1"
            settings:units="sec"
            settings:interval="1"
            android:dependency="pulse_ambient_light" />

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="pulse_ambient_auto_color"
            android:title="@string/pulse_ambient_auto_color_title"
            android:summary="@string/pulse_ambient_auto_color_summary"
            android:dependency="pulse_ambient_light"
            android:defaultValue="false" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="pulse_ambient_light_color"
            android:title="@string/pulse_ambient_light_color_title"
            android:persistent="false"
            android:dependency="pulse_ambient_light"
            settings:defaultColorValue="0xFF1A73E8" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_messages"
        android:title="@string/notification_messages">

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="enable_fc_notifications"
            android:title="@string/enable_fc_notifications_title"
            android:summary="@string/enable_fc_notifications_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_misc"
        android:title="@string/notification_misc">

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="force_expanded_notifications"
            android:title="@string/force_expanded_notifications_title"
            android:summary="@string/force_expanded_notifications_summary"
            android:defaultValue="false" />

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="notification_guts_kill_app_button"
            android:title="@string/notification_guts_kill_app_button_title"
            android:summary="@string/notification_guts_kill_app_button_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/notifications_vib_category">

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="vibrate_on_notifications"
            android:title="@string/vibrate_on_notifications_title"
            android:summary="@string/vibrate_on_notifications_summary"
            android:defaultValue="true" />

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="notification_sound_vib_screen_on"
            android:title="@string/notification_sound_vib_screen_on_title"
            android:summary="@string/notification_sound_vib_screen_on_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_flash"
        android:title="@string/notification_flash_title">

        <!-- Flashlight on incoming calls -->
        <ListPreference
            android:key="flashlight_on_call"
            android:title="@string/flashlight_on_call_title"
            android:entries="@array/flashlight_on_call_entries"
            android:entryValues="@array/flashlight_on_call_values"
            android:summary="%s"
            android:defaultValue="0" />

        <com.evolution.settings.preference.SystemSettingSwitchPreference
            android:key="flashlight_on_call_waiting"
            android:title="@string/flashlight_on_call_wait_title"
            android:summary="@string/flashlight_on_call_wait_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
